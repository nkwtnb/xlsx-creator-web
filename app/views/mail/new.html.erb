<% content_for(:page, "パスワードリセットメール送信") %>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="container d-flex justify-content-center">
        <%= form_with url: "/mail", method: :post do |form| %>
          <div> <%= flash[:danger] %></div>
          <div class="row mb-3">
            <label for="exampleFormControlInput1" class="form-label">メールアドレス</label>
            <%= form.text_field :email, class: 'form-control', :placeholder => "name@example.com"%>
          </div>
          <div class="row mb-2 align-content-right">
            <%= form.submit "送信", class: "btn btn-success"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
